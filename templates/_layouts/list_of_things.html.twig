{% block main_classes 'container vp vp--guttered vertical-pad' %}

{% block head %}
  {{ include('_includes/meta_pagination.html.twig', {pager: things}, with_context=false) }}
{% endblock head %}

{% block body %}
  {% block page_header %}
    <h1 class="pad">{{ block('title') }}</h1>
  {% endblock %}

  {% if things|length > 0 %}
    <div class="vp vp--bordered vp--guttered card">
      {% for thing in things %}
        {{ block('render_thing') }}
      {% endfor %}
    </div>

    <div class="pad">
      {{ include('_includes/pagination.html.twig', {pager: things}, with_context=false) }}
    </div>
  {% else %}
    <p class="pad"><small class="dimmed">{{ 'flash.no_entries_to_display'|trans }}</small></p>
  {% endif %}
{% endblock body %}
