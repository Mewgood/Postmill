{% extends 'base.html.twig' %}
{% use '_layouts/single_column.html.twig' %}

{% block title %}
  {{ 'wiki.all_pages'|trans }}
{% endblock %}

{% block head %}
  <link rel="canonical" href="{{ path('wiki_all') }}">

  {% include '_includes/meta_pagination.html.twig' with {pager: pages} only %}
{% endblock %}

{% block main_classes 'container container--two-col-expand vertical-pad vp vp--guttered' %}

{% block body %}
  <h1 class="no-margin pad">{{ block('title') }}</h1>

  <table class="table">
    <thead>
      <tr>
        <th>{{ 'wiki.path'|trans }}</th>
        <th>{{ 'wiki.page_title'|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for page in pages %}
        <tr>
          <td><a href="{{ path('wiki', {path: page.path}) }}">{{ page.path }}</a></td>
          <td>{{ page.latestRevision.title }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="pad">
    {{ include('_includes/pagination.html.twig', {pager: pages}, with_context=false) }}
  </div>
{% endblock %}

