{% extends 'front/base.html.twig' %}

{% block page_classes 'featured-page' %}

{% block sidebar %}
  {{ parent() }}

  <section class="sidebar__section sidebar-card">
    <h1 class="sidebar__title">{{ 'front.featured_forums'|trans }}</h1>

    {% if forums|length > 0 %}
      <ul class="unlistify nav nav--guttered nav--slim-gutters">
        {% for name in forums %}
          <li>
            <a href="{{ path('forum', {forum_name: name}) }}"
               class="button button--secondary button--small">
              {{- name -}}
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="fg-muted">
        <small class="text-sm">
          {{- 'front.no_forums'|trans -}}
        </small>
      </p>
    {% endif %}
  </section>
{% endblock %}
