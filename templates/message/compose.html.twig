{% extends 'user/base.html.twig' %}

{% set user = receiver %}

{% block title %}
  {{ 'compose_message.title'|trans({'%username%': receiver.username}) }}
{% endblock %}

{% block body %}
  <h1 class="page-heading">
    {{- 'compose_message.title'|trans({'%username%': '<a href="%s">%s</a>'|format(
      path('user', {username: receiver.username})|escape,
      receiver.username|escape
    )})|raw -}}
  </h1>

  {{ include('message/_form.html.twig', {form: form}, with_context=false) }}
{% endblock %}
