{% extends 'base.html.twig' %}

{% form_theme form '_forms/aligned_form_theme.html.twig' %}

{% block title 'ban_add.title'|trans %}

{% block main_classes 'container vp vp--guttered pad vertical-pad' %}

{% block body %}
  <header class="nav nav--guttered nav--justify-space-between">
    <h1 class="no-margin">{{ block('title') }}</h1>
    {{ include('ban/_tabs.html.twig', {page: 'ip_bans'}, with_context=false) }}
  </header>

  {{ form_start(form, {attr: {class: 'vp vp--guttered'}}) }}
    {{ form_row(form.ip, {attr: {size: 39}}) }}

    {{ form_row(form.reason) }}

    {{ form_row(form.expiryDate) }}

    {{ form_row(form.user) }}

    {{ form_row(form.submit) }}
  {{ form_end(form) }}
{% endblock %}

