{% form_theme form '_forms/aligned_form_theme.html.twig' %}

{{ form_start(form, {attr: {class: 'vp vp--guttered'}}) }}
  {{ form_row(form.username, {help: 'user.username_rules'}) }}

  {{ form_row(form.password.first, {help: 'user.password_rules'}) }}

  {{ form_row(form.password.second) }}

  {{ form_row(form.email, {help: 'user.email_optional'}) }}

  {% if form.verification is defined %}
    {% if not app.request.hasPreviousSession %}
      <p class="pad vertical-pad bad-bg no-margin">{{ 'flash.no_cookies_verification'|trans }}</p>
    {% endif %}
    {{ form_row(form.verification) }}
  {% endif %}

  {{ form_row(form.submit) }}
{{ form_end(form) }}
