{% extends 'user/base.html.twig' %}
{% use '_layouts/list_of_things.html.twig' %}

{% set things = submissions %}

{% from 'submission/_macros.html.twig' import submission %}

{% block head %}
  <link rel="canonical" href="{{ url('user_submissions', {username: user.username}) }}">

  {{ parent() }}
{% endblock head %}

{% block title 'user.submissions'|trans %}

{% block page_header %}
  {{ include('user/_nav.html.twig', {
    current: 'user_submissions',
    title: block('title'),
    user: user,
  }, with_context=false) }}
{% endblock %}

{% block render_thing %}
  {{ submission(thing) }}
{% endblock render_thing %}
