{% extends 'user/base.html.twig' %}
{% use '_layouts/list_of_things.html.twig' %}

{% from 'comment/_macros.html.twig' import comment %}

{% block head %}
  <link rel="canonical" href="{{ url('user_comments', {username: user.username}) }}">
  {{ parent() }}
{% endblock head %}

{% block title 'user.comments'|trans %}

{% set things = comments %}

{% block page_header %}
  {{ include('user/_nav.html.twig', {
    current: 'user_comments',
    title: block('title'),
    user: user
  }, with_context=false) }}
{% endblock page_header %}

{% block render_thing %}
  {{ comment(thing) }}
{% endblock render_thing %}
