{% extends 'user/base.html.twig' %}
{% use '_layouts/list_of_things.html.twig' %}

{% from 'submission/_macros.html.twig' import submission %}
{% from 'comment/_macros.html.twig' import comment %}

{% block title user.username %}

{% set things = contributions %}

{% block page_header %}
  {{ include('user/_nav.html.twig', {
    current: 'user',
    title: block('title'),
    user: user
  }, with_context=false) }}
{% endblock %}

{% block render_thing %}
  {% if thing.type == 'submission' %}
    {{ submission(thing.submission) }}
  {% elseif thing.type == 'comment' %}
    {{ comment(thing.comment, {show_context: true}) }}
  {% endif %}
{% endblock %}
