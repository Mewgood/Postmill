{% extends 'forum/base.html.twig' %}

{% block page_classes 'forum-moderators-page' %}

{% block title 'forum_moderators.title'|trans({'%forum_name%': forum.name}) %}

{% block head %}
  {{ parent() }}
  {{ include('_includes/meta_pagination.html.twig', {pager: moderators}, with_context=false) }}
{% endblock head %}

{% block body %}
  <h1 class="page-heading">{{ block('title') }}</h1>

  {% embed '_layouts/table_pagination.html.twig' with { items: moderators } %}
    {% block header %}
      <th>{{ 'forum_moderators.username'|trans }}</th>
      <th class="table__shrink">{{ 'forum_moderators.since'|trans }}</th>
      <th class="table__shrink">{{ 'forum_moderators.last_seen'|trans }}</th>
      <th class="table__shrink"></th>
    {% endblock header %}

    {% block row %}
      <td><a href="{{ path('user', {username: item.user.username}) }}">{{ item.user.username }}</a></td>
      <td class="table__shrink">
        <time datetime="{{ item.timestamp|date('c') }}" title="{{ item.timestamp|localizeddate('long', 'short') }}" class="relative-time">
          {{ item.timestamp|localizeddate('long', 'short') }}
        </time>
      </td>
      <td class="table__shrink">
        {% if item.user.lastSeen is not null %}
        <time datetime="{{ item.user.lastSeen|date('c') }}" title="{{ item.user.lastSeen|localizeddate('long', 'short') }}" class="relative-time">
          {{ item.user.lastSeen|localizeddate('long', 'short') }}
        </time>
        {% endif %}
      </td>
      <td class="table__shrink">
        {% if is_granted('remove', item) %}
          <form action="{{ path('remove_moderator', {forum_name: forum.name, moderator_id: item.id}) }}" method="post">
            <input type="hidden" name="token" value="{{ csrf_token('remove_moderator') }}">
            <button class="button button--small inline">{{ 'action.remove'|trans }}</button>
          </form>
        {% endif %}
      </td>
    {% endblock row %}
  {% endembed %}
{% endblock body %}

